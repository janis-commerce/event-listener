  "devDependencies": {
    "eslint": "^8.4.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.25.3",
    "husky": "^7.0.4",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "sinon": "^12.0.1",
    "typescript": "^4.5.2"
  },
  "files": [
    "lib/",
    "types/"
  ],
  "types": "types/index.d.ts",
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "@janiscommerce/api": "^6.6.1",
    "@janiscommerce/api-session": "^3.3.1",
