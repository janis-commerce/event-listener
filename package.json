    "build-types": "tsc lib/index.js --declaration --allowJs --emitDeclarationOnly --outDir types",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/janis-commerce/event-listener.git"
  },
  "author": "Janis",
